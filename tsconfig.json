{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "ES6",
    "lib": ["es6", "dom", "dom.iterable", "es2015.iterable", "es2017.object"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "pathfinder": ["src/@types/pathfinder"]
    },
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
